{

  "manifest_version": 1,
  "name": "thanos",
  "version": "1.0",
  "description": "When tiggered closes half of the opened tabs.",
  "main": "thanos.js",
  "repository": "https://github.com/italogsfernandes/thanos",
  "author": "italogsfernandes",
  "license": "MIT",
  "icons": {
    "48": "icons/thanos-48.png",
    "96": "icons/thanos-96.png",
    "128": "icons/thanos-128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["thanos.js"]
    }
  ],
  
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "history",
    "identity",
    "notifications"
  ]
}
